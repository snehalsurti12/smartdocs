    {
      "id": "badge_text",
      "type": "text",
      "region": "body",
      "x": 188,
      "y": 148,
      "w": 154,
      "h": 14,
      "text": "{{profile.badge}}",
      "style": { "font": "Inter", "size": 10, "weight": 600, "color": "#ffffff", "align": "center" }
