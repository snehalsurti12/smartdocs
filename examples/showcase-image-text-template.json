{
  "id": "tmpl_showcase_image_text_001",
  "name": "Image + Text Showcase",
  "version": "1.0.0",
  "unit": "pt",
  "page": {
    "size": "A4",
    "width": 595,
    "height": 842,
    "margin": { "top": 32, "right": 32, "bottom": 32, "left": 32 },
    "headerHeight": 0,
    "footerHeight": 34
  },
  "fonts": [
    { "name": "Inter", "source": "local", "fallback": ["Arial", "sans-serif"] },
    { "name": "Times New Roman", "source": "local", "fallback": ["Times", "serif"] }
  ],
  "styles": {
    "defaultText": { "font": "Inter", "size": 10, "color": "#1f2937", "lineHeight": 13 }
  },
  "dataSample": "/examples/showcase-image-text-data.json",
  "elements": [
    {
      "id": "hero_bg",
      "type": "box",
      "region": "body",
      "x": 0,
      "y": 0,
      "w": 531,
      "h": 192,
      "style": { "borderColor": "#0f4c81", "borderWidth": 1, "fill": "#0f4c81" }
    },
    {
      "id": "hero_photo",
      "type": "image",
      "region": "body",
      "x": 18,
      "y": 20,
      "w": 140,
      "h": 152,
      "src": "{{profile.photo}}",
      "fit": "cover"
    },
    {
      "id": "hero_name",
      "type": "text",
      "region": "body",
      "x": 176,
      "y": 34,
      "w": 336,
      "h": 38,
      "text": "{{profile.name}}",
      "style": { "font": "Inter", "size": 26, "weight": 700, "color": "#ffffff", "lineHeight": 28 }
    },
    {
      "id": "hero_role",
      "type": "text",
      "region": "body",
      "x": 176,
      "y": 76,
      "w": 336,
      "h": 56,
      "text": "{{profile.role}}\n{{profile.tagline}}",
      "style": { "font": "Inter", "size": 11, "weight": 500, "color": "#d9e7f7", "lineHeight": 15 }
    },
    {
      "id": "badge_box",
      "type": "box",
      "region": "body",
      "x": 176,
      "y": 140,
      "w": 174,
      "h": 28,
      "style": { "borderColor": "#78a8d3", "borderWidth": 1, "fill": "#2f77bd", "borderRadius": 5 }
