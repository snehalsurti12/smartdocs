{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/smartdocs/template.schema.json",
  "title": "Document Template",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "version", "unit", "page", "elements"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "unit": { "type": "string", "enum": ["pt"] },
    "page": { "$ref": "#/$defs/page" },
    "fonts": {
      "type": "array",
      "items": { "$ref": "#/$defs/font" },
      "uniqueItems": false
    },
    "styles": { "$ref": "#/$defs/styleLibrary" },
    "dataSample": { "type": "string", "minLength": 1 },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "flowMeasure": { "type": "string", "enum": ["browser", "approx"] }
      }
    },
    "elements": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/$defs/element" }
    },
    "partials": { "$ref": "#/$defs/partials" },
    "dataContract": { "$ref": "#/$defs/dataContract" },
    "variables": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean", "null"]
      }
    }
  },
  "$defs": {
    "page": {
      "type": "object",
      "additionalProperties": false,
      "required": ["size", "width", "height", "margin"],
      "properties": {
        "size": {
          "type": "string",
          "enum": ["A4", "Letter", "Legal", "Custom"]
        },
        "width": { "type": "number", "minimum": 1 },
        "height": { "type": "number", "minimum": 1 },
        "margin": { "$ref": "#/$defs/margin" },
        "headerHeight": { "type": "number", "minimum": 0 },
        "footerHeight": { "type": "number", "minimum": 0 }
      }
    },
    "margin": {
      "type": "object",
      "additionalProperties": false,
      "required": ["top", "right", "bottom", "left"],
      "properties": {
        "top": { "type": "number", "minimum": 0 },
        "right": { "type": "number", "minimum": 0 },
        "bottom": { "type": "number", "minimum": 0 },
        "left": { "type": "number", "minimum": 0 }
      }
    },
    "font": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "source"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "source": { "type": "string", "enum": ["local", "url", "data"] },
        "url": { "type": "string", "minLength": 1 },
        "data": { "type": "string", "minLength": 1 },
        "fallback": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "source": { "const": "url" } } },
          "then": { "required": ["url"] }
        },
        {
          "if": { "properties": { "source": { "const": "data" } } },
          "then": { "required": ["data"] }
        }
      ]
    },
    "styleLibrary": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/style" }
    },
    "style": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "font": { "type": "string" },
        "size": { "type": "number", "minimum": 1 },
        "weight": { "type": "integer", "minimum": 100, "maximum": 900 },
        "fontStyle": { "type": "string", "enum": ["normal", "italic"] },
        "color": { "type": "string" },
        "align": { "type": "string", "enum": ["left", "center", "right", "justify"] },
        "valign": { "type": "string", "enum": ["top", "middle", "bottom"] },
        "lineHeight": { "type": "number", "minimum": 0 },
        "borderColor": { "type": "string" },
        "borderWidth": { "type": "number", "minimum": 0 },
        "fill": { "type": "string" },
        "borderRadius": { "type": "number", "minimum": 0 },
        "opacity": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "elementBase": {
      "type": "object",
      "required": ["id", "type", "x", "y", "w", "h"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string" },
        "region": { "type": "string", "enum": ["header", "body", "footer"] },
        "repeat": { "type": "string", "enum": ["all", "first", "afterFirst", "middle", "last"] },
        "x": { "type": "number", "minimum": 0 },
        "y": { "type": "number", "minimum": 0 },
        "w": { "type": "number", "minimum": 0 },
        "h": { "type": "number", "minimum": 0 },
        "style": { "$ref": "#/$defs/style" },
        "visibleIf": { "type": "string" },
        "dataBinding": { "type": "string" },
        "zIndex": { "type": "integer" }
      }
    },
    "element": {
      "oneOf": [
        { "$ref": "#/$defs/textElement" },
        { "$ref": "#/$defs/flowTextElement" },
        { "$ref": "#/$defs/imageElement" },
        { "$ref": "#/$defs/tableElement" },
        { "$ref": "#/$defs/qrElement" },
        { "$ref": "#/$defs/lineElement" },
        { "$ref": "#/$defs/boxElement" },
        { "$ref": "#/$defs/includeElement" }
      ]
    },
    "textElement": {
      "type": "object",
      "unevaluatedProperties": false,
      "allOf": [
        { "$ref": "#/$defs/elementBase" },
        {
          "required": ["type", "text"],
          "properties": {
            "type": { "const": "text" },
            "text": { "type": "string" },
            "richText": { "type": "boolean" }
          }
        }
      ]
    },
    "flowTextElement": {
      "type": "object",
      "unevaluatedProperties": false,
      "allOf": [
        { "$ref": "#/$defs/elementBase" },
        {
          "required": ["type", "text"],
          "properties": {
            "type": { "const": "flowText" },
            "text": { "type": "string" },
            "columns": { "type": "integer", "minimum": 1 },
            "gap": { "type": "number", "minimum": 0 }
          }
        }
      ]
    },
    "imageElement": {
      "type": "object",
      "unevaluatedProperties": false,
      "allOf": [
        { "$ref": "#/$defs/elementBase" },
        {
          "required": ["type", "src"],
          "properties": {
            "type": { "const": "image" },
            "src": { "type": "string", "minLength": 1 },
            "fit": { "type": "string", "enum": ["contain", "cover", "fill"] }
          }
        }
      ]
    },
    "tableElement": {
      "type": "object",
      "unevaluatedProperties": false,
      "allOf": [
        { "$ref": "#/$defs/elementBase" },
        {
          "required": ["type", "rows", "columns"],
          "properties": {
            "type": { "const": "table" },
            "rows": { "type": "string", "minLength": 1 },
            "columns": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/tableColumn" }
            },
            "rowStyle": { "$ref": "#/$defs/style" },
            "headerStyle": { "$ref": "#/$defs/style" },
            "fillMode": { "type": "string", "enum": ["none", "pad"] },
            "pagination": { "$ref": "#/$defs/pagination" },
            "continuationY": { "type": "number", "minimum": 0 },
            "continuationH": { "type": "number", "minimum": 0 }
          }
        }
      ]
    },
    "tableColumn": {
      "type": "object",
      "additionalProperties": false,
      "required": ["header", "field", "w"],
      "properties": {
        "header": { "type": "string" },
        "field": { "type": "string", "minLength": 1 },
        "w": { "type": "number", "minimum": 1 },
        "align": { "type": "string", "enum": ["left", "center", "right"] },
        "format": { "type": "string" },
        "precision": { "type": "integer", "minimum": 0 }
      }
    },
    "pagination": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": { "type": "string", "enum": ["auto", "none"] },
        "rowHeight": { "type": "number", "minimum": 1 }
      }
    },
    "dataContract": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fields": {
          "type": "array",
          "items": { "$ref": "#/$defs/dataContractField" }
        }
      }
    },
    "dataContractField": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "required": { "type": "boolean" },
        "type": { "type": "string", "enum": ["string", "number", "boolean", "array", "object"] },
        "source": { "type": "string", "enum": ["external", "template", "computed"] },
        "transform": {
          "type": "string",
          "enum": ["none", "trim", "uppercase", "lowercase", "titlecase", "number", "boolean", "date", "currency"]
        },
        "transformLocale": { "type": "string", "minLength": 1 },
        "transformCurrency": { "type": "string", "minLength": 1 },
        "transformDateStyle": { "type": "string", "enum": ["short", "medium", "long", "full"] },
        "defaultValue": { "type": ["string", "number", "boolean", "null"] },
        "externalPath": { "type": "string", "minLength": 1 }
      }
    },
    "qrElement": {
      "type": "object",
      "unevaluatedProperties": false,
      "allOf": [
        { "$ref": "#/$defs/elementBase" },
        {
          "required": ["type", "value"],
          "properties": {
            "type": { "const": "qr" },
            "value": { "type": "string", "minLength": 1 },
            "ecc": { "type": "string", "enum": ["L", "M", "Q", "H"] }
          }
        }
      ]
    },
    "lineElement": {
      "type": "object",
      "unevaluatedProperties": false,
      "allOf": [
        { "$ref": "#/$defs/elementBase" },
        {
          "required": ["type"],
          "properties": {
            "type": { "const": "line" }
          }
        }
      ]
    },
    "boxElement": {
      "type": "object",
      "unevaluatedProperties": false,
      "allOf": [
        { "$ref": "#/$defs/elementBase" },
        {
          "required": ["type"],
          "properties": {
            "type": { "const": "box" }
          }
        }
      ]
    },
    "includeElement": {
      "type": "object",
      "unevaluatedProperties": false,
      "allOf": [
        { "$ref": "#/$defs/elementBase" },
        {
          "required": ["type", "ref"],
          "properties": {
            "type": { "const": "include" },
            "ref": { "type": "string", "minLength": 1 }
          }
        }
      ]
    },
    "partials": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/partial" }
    },
    "partial": {
      "type": "object",
      "additionalProperties": false,
      "required": ["elements"],
      "properties": {
        "elements": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/element" }
        }
      }
    }
  }
}
